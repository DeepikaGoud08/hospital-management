<body style="background-image:url('/images/06.jpg')">
  <div>
<div aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/patients">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Edit Patient</li>
    </ol>
  </div>
   
  <% if (typeof alert !== 'undefined' && alert) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= alert %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  
  <% for(var i = 0; i < rows.length; i++) { %>
    <form class="row g-3 needs-validation" method="POST" action="/patients/editpatient/<%= rows[i].patient_id %>" novalidate>
        <div class="col-6">
            <div class="form-floating mb-3">
              <input type="text" class="form-control" id="floatingInput" value="<%= rows[i].first_name %>" placeholder="First Name" name="first_name">
              <label for="floatingInput">First Name</label>
            </div>
          </div>
          <div class="col-6">
            <div class="form-floating mb-3">
              <input type="text" class="form-control" id="floatingInput" value="<%= rows[i].last_name %>" placeholder="Last Name" name="last_name">
              <label for="floatingInput">Last Name</label>
            </div>
          </div>
          <div class="col-6">
            <div class="form-floating mb-3">
              <input type="text" class="form-control" id="floatingInput" value="<%= rows[i].age %>" placeholder="Age" name="age">
              <label for="floatingInput">Age</label>
            </div>
          </div>
          <div class="col-6">
            <div class="form-floating mb-3">
              <input type="text" class="form-control" id="floatingInput" value="<%= rows[i].gender %>" placeholder="Gender" name="gender">
              <label for="floatingInput">Gender</label>
            </div>
          </div>
          <div class="col-6">
            <div class="form-floating mb-3">
              <input type="email" class="form-control" id="floatingInput" value="<%= rows[i].email %>" placeholder="email@email.com" name="email">
              <label for="floatingInput">Email</label>
            </div>
          </div>
          <div class="col-6">
            <div class="form-floating mb-3">
              <input type="text" class="form-control" id="floatingInput" value="<%= rows[i].phone %>" placeholder="Phone" name="phone">
              <label for="floatingInput">Phone</label>
            </div>
          </div>
          <div class="col-12">
            <div class="form-floating mb-3">
              <textarea class="form-control" placeholder="Leave a comment here" id="comments" name="comments" style="height: 200px"><%= rows[i].comments %></textarea>
              <label for="comments">Comments</label>
            </div>
          </div>
          <div class="col-12 d-grid">
            <button class="btn btn-primary" type="submit">Submit</button>
          </div>
          
    </form>
  <% } %>
  </div>
</body>

  