    </header>
    <style>
        .table thead th {
  border: none;
  font-weight: bold;
  color: #fff;
  background-color: #343a40;
}

.table tbody tr:nth-child(even) {
  background-color: #f2f2f2;
}

h1 {
  font-family: "Montserrat", sans-serif;
  font-size: 30px;
  font-weight: bold;
  line-height: 1.2;
  text-align: left;
  color: #333;
  margin: 20px 0;
}
    </style>
  </head>



  <body style="background-image:url('/images/0.jpg')">
    <div>
    <div aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/patients">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">View Patient</li>
      </ol>
    </div>
  <div class="view-user p-5">
    <% for(var i = 0; i< rows.length; i++) { %>
    <div class="row mb-5">
      <div class="col text-center">
        <h3><%= rows[i].first_name %> <%= rows[i].last_name %></h3>
      </div>
    </div>
    <div class="row">
      <div class="col">
      
        <table class="table">
          <thead>
            <tr>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Age</th>
              <th scope="col">Gender</th>
              <th scope="col">Email</th>
              <th scope="col">Phone</th>
            </tr>
          </thead>
          <tbody>
            
            <tr>
              <th scope="row"><%= rows[i].first_name %></th>
              <td><%= rows[i].last_name %></td>
               <td><%= rows[i].age %></td>
                <td><%= rows[i].gender %></td>
              <td><%= rows[i].email %></td>
              <td><%= rows[i].phone %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col">
          <b>Comments</b>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= rows[i].comments %>
        </div>
      </div>
    </div>
   <% } %>
  </div>
  </div>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
  crossorigin="anonymous"></script>
</body>
  
