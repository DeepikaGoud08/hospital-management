<body style="background-image:url('/images/m.jpg')">
<div class="tstyle">
<div class="row">
    <div class="col-6">
      <h1> Appointments</h1>
    </div>
    
  </div>
  
  <table class="table table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Appointment ID</th>
        <th scope="col">Appointment Date</th>
        <th scope="col">Doctor First Name</th>
        <th scope="col">Doctor Last Name</th>
        <th scope="col">Patient First Name</th>
        <th scope="col">Patient Last Name</th>
        


      </tr>
    </thead>
    <tbody>
  
        <% for(var i = 0; i < rows.length; i++) { %>
      <tr>
        <th scope="row"><%= rows[i].appointment_id %></th>
        <td><%= rows[i].appointment_date %></td>
        <td><%= rows[i].doctor_first_name %></td>
        <td><%= rows[i].doctor_last_name %></td>
        <td><%= rows[i].patient_first_name %></td>
        <td><%= rows[i].patient_last_name %></td>

      </tr>
      <% } %>
  
    </tbody>
  </table>
</div>
